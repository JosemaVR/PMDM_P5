<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celeste"
    tools:context=".PeliculasActivity">

    <include
        android:id="@+id/toolbar_peliculas"
        layout="@layout/app_bar_atras" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tituloPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="60dp"
                android:fontFamily="@font/batmfa__"/>

            <ImageView
                android:id="@+id/caratulaPelicula"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"/>

            <RatingBar
                android:id="@+id/clasificacionPelicula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"/>

            <TextView
                android:id="@+id/directorPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/repartoPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/sinopsisPelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>